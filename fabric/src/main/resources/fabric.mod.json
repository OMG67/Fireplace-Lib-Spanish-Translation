{
  "schemaVersion": 1,
  "id": "fireplacelib",
  "version": "${version}",
  "name": "${readable_name}",
  "description": "${mod_description}",
  "authors": [
    "The_Fireplace"
  ],
  "contact": {
    "homepage": "${fabric_curseforge_url}",
    "sources": "${github_url}",
    "issues": "${github_url}/issues",
    "modrinth": "${modrinth_url}"
  },
  "license": "${license_id}",
  "icon": "${logo_filename}",
  "environment": "*",
  "entrypoints": {
    "di-main": [
      "dev.the_fireplace.lib.entrypoints.Main"
    ],
    "client": [
      "dev.the_fireplace.lib.entrypoints.Client"
    ],
    "modmenu": [
      "dev.the_fireplace.lib.entrypoints.ModMenu"
    ],
    "fireplacelib": [
      "dev.the_fireplace.lib.entrypoints.ConfigGui"
    ]
  },
  "mixins": [
    "fireplacelib.mixins.json",
    "fireplacelibfabric.mixins.json",
    "optional.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.0",
    "fabric": "*",
    "minecraft": ">=1.18",
    "annotateddi": ">=2 <3"
  },

  "suggests": {
    "modmenu": "*"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${discord_url}"
      },
      "badges": [ "library" ]
    }
  }
}
